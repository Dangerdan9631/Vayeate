{
    // ----- Vayeate  psi-header -------------------------------------------- //
    "psi-header.config": {
        "forceToTop": true,
        "company": "[COMPANY NAME]" // Replace this with your [COMPANY NAME].
    },
    "psi-header.changes-tracking": {
        "isActive": true,
        "autoHeader": "autoSave",
        "enforceHeader": true,
        "include": [
            "csharp",
            "java",
            "kotlin",
            "powershell",
            "rust",
            "xml"
        ],
        "exclude": [
            "*"
        ]
    },
    "psi-header.lang-config": [
        {
            "language": "csharp",
            "begin": "// -----------------------------------------------------------------------------",
            "prefix": "//",
            "end": "// -----------------------------------------------------------------------------",
            "blankLinesAfter": 1
        },
        {
            "language": "java",
            "begin": "/* ",
            "prefix": " * ",
            "end": " */",
            "blankLinesAfter": 1
        },
        {
            "language": "kotlin",
            "begin": "/* ",
            "prefix": " * ",
            "end": " */",
            "blankLinesAfter": 1
        },
        {
            "language": "powershell",
            "begin": "# -----------------------------------------------------------------------------",
            "prefix": "#",
            "end": "# -----------------------------------------------------------------------------",
            "blankLinesAfter": 1
        },
        {
            "language": "rust",
            "begin": "",
            "prefix": "// ",
            "end": "",
            "blankLinesAfter": 1
        },
        {
            "language": "xml",
            "begin": "<!--",
            "prefix": "",
            "end": "-->",
            "blankLinesAfter": 1
        },
    ],
    "psi-header.templates": [
        {
            "language": "*",
            "template": [
                "<<filename>>",
                "",
                "Copyright (c) <<year>> <<company>>. All rights reserved.",
                "Licensed under the MIT License.",
                "See https://github.com/Dangerdan9631/Licenses/blob/main/LICENSE-MIT for full license information.",
            ],
        },
        {
            "language": "csharp",
            "template": [
                "  <copyright file=\"<<filename>>\" company=\"<<company>>\">",
                "      Copyright (c) <<year>> <<company>>. All rights reserved.",
                "      Licensed under the MIT License.",
                "      See https://github.com/Dangerdan9631/Licenses/blob/main/LICENSE-MIT for full license information.",
                "  </copyright>",
            ],
        },
        {
            "language": "powershell",
            "template": [
                "  <copyright file=\"<<filename>>\" company=\"<<company>>\">",
                "      Copyright (c) <<year>> <<company>>. All rights reserved.",
                "      Licensed under the MIT License.",
                "      See https://github.com/Dangerdan9631/Licenses/blob/main/LICENSE-MIT for full license information.",
                "  </copyright>",
            ],
        },
        {
            "language": "xml",
            "template": [
                "  <copyright file=\"<<filename>>\" company=\"<<company>>\">",
                "      Copyright (c) <<year>> <<company>>. All rights reserved.",
                "      Licensed under the MIT License.",
                "      See https://github.com/Dangerdan9631/Licenses/blob/main/LICENSE-MIT for full license information.",
                "  </copyright>",
            ],
        },
    ]
}